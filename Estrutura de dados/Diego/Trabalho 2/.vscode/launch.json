    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Makefile C",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/programa.out",
            "args": ["c", "exemplo.txt", "teste.huff"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Makefile",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Makefile D",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/programa.out",
            "args": ["d", "exemplo.txt", "teste.huff"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Makefile",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}